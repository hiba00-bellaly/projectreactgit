pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        
        stage('Build and Push Docker Images') {
            steps {
                script {
                    
                    docker.withRegistry('https://registry-1.docker.io/v2/', credentialsId: '1') {
                        def clientImage = docker.build("hibab/mern-client:latest", "./client")
                        clientImage.push()
                    }

                   
                    docker.withRegistry('https://registry-1.docker.io/v2/', credentialsId: '1') {
                        def serverImage = docker.build("hibab/mern-server:latest", "./server")
                        serverImage.push()
                    }
                }
            }
        }
    }
}
